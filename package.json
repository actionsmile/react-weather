{
  "name": "weather",
  "version": "0.0.1",
  "description": "Weather app based on React, Redux, Typescript",
  "main": "index.tsx",
  "keywords": [
    "weather",
    "lesson",
    "example",
    "app",
    "react",
    "web-app"
  ],
  "author": "Aziz Zainutdin <aloha@scriptor.me>",
  "license": "MIT",
  "repository": "https://github.com/actionsmile/react-weather.git",
  "scripts": {
    "start:clean": "webpack --progress --display-error-details",
    "start": "webpack --watch --progress --display-error-details",
    "lint": "tslint --config ./tslint.json ./src/**/*",
    "test": "jest --verbose --coverage",
    "start:yarn-all": "yarn lint && yarn test && yarn start"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.1",
    "@types/jest": "^22.0.0",
    "@types/lodash": "4.14.91",
    "awesome-typescript-loader": "3.4.1",
    "enzyme": "3.1.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.4",
    "react-addons-test-utils": "15.6.2",
    "source-map-loader": "0.2.3",
    "ts-jest": "^22.0.0",
    "ts-loader": "3.2.0",
    "tslint": "5.0.0"
  },
  "dependencies": {
    "@types/deep-freeze": "^0.1.1",
    "@types/node": "8.5.5",
    "@types/react": "16.0.0",
    "@types/react-dom": "16.0.0",
    "@types/react-redux": "@5.0.1",
    "babel-polyfill": "^6.26.0",
    "deep-freeze": "^0.0.1",
    "lodash": "^4.17.4",
    "node-uuid": "^1.4.8",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "^5.0.6",
    "redux": "3.7.2",
    "save": "2.3.2",
    "typescript": "2.6.2",
    "webpack": "3.10.0",
    "yql": "^1.0.2"
  },
  "resolutions": {
    "@types/react": "16.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "^App/(.*)": "<rootDir>/src/App/$1",
      "^Core/(.*)": "<rootDir>/src/Core/$1",
      "^Modules/(.*)": "<rootDir>/src/Modules/$1",
      "^Components/(.*)": "<rootDir>/src/Components/$1",
      "^assets/(.*)": "<rootDir>/src/assets/$1"
    },
    "mapCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
